
@{
    ViewBag.Title = "Admin";
}
<div class="row no-gutters">
    <div class="card col-md-12 col-lg-10 col-xl-8 shadow mx-auto">
        <h3 class="text-center pt-3 pb-3">Admin Quotes List</h3>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Quote</th>
                </tr>
            </thead>
            <tbody>
        @{
            foreach (var i in Model)
            {
                <tr>
                    <th scope="row">@i.id</th>
                    <td>@i.fname @i.lname</td>
                    <td>@i.email</td>
                    <td>$@i.premium</td>
                </tr>
            }
        }
            </tbody>
        </table>
    </div>
</div>
